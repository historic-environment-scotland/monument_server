<p id="notice"><%= notice %></p>

<h1>Current users</h1>
<% if @users.present? %>
  <div class="mw9 center ph3-ns">
      <div class="cf ph2-ns pv2 mv2 ">
        <div class="fl w-25 pa2 b">
          Email
        </div>
        <div class="fl w-25 pa2 b">
          Admin user?
        </div>
        <div class="fl w-25 pa2 b">
          Actions
        </div>
      </div>
    </div>
  <% @users.each do |u| %>
    <div class="mw9 center ph3-ns">
      <div class="cf ph2-ns pv2 mv2 ">
        <div class="fl w-25 pa2">
          <%= u.email %>
        </div>
        <div class="fl w-25 pa2">
          <%= u.admin %>
        </div>
        <div class="fl w-25 pa2">
          <%= link_to 'Edit', edit_admin_user_role_path(u) %><br/>
          <%= link_to "Delete", admin_user_role_path(u), method: :delete, data: { confirm: "Are you sure? This cannot be reversed" } %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
No users present
<% end %>

